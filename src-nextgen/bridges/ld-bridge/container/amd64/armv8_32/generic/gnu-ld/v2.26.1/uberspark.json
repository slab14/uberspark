/*
    uberSpark code bridges json definition
*/

{
   	/* manifest header */
	   "uberspark-manifest":{
		"manifest_node_types" : [ "uberspark-bridge-ld" ],
		"uberspark_min_version" : "any",
		"uberspark_max_version" : "any"
	},
	
	"uberspark-bridge-ld" : {
		/* bridge header */
		"bridge-hdr":{
			"btype" : "container",
			"bname" : "gnu-ld",
			"execname" : "arm-linux-gnueabihf-ld",
			"devenv" : "amd64",
			"arch" : "armv8_32",
			"cpu" : "generic",
			"version" : "v2.26.1",
			"path" : ".",
		        "params" : [
			    "-nostdinc",
			    "-nostdlib",
			    "-nostartfiles"
			],
			"container_fname" : "uberspark_bridges.Dockerfile"
		},

		"params_prefix_lscript" : "-T",
		"params_prefix_libdir" : "-L",
		"params_prefix_lib" : "-l",
		"params_prefix_output" : "-o"

	}

}
